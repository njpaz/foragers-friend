<h3>New Find</h3>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <form role="form">
        <div class="form-group">
          <label>
            Name of Your Find
          </label>
          {{ input value=model.title classNames="form-control" }}
        </div>
        <div class="form-group">
          <label>
            Description (optional)
          </label>
          {{ textarea value=model.description classNames="form-control" }}
        </div>
        <div class="form-group">
          <label>
            Location (optional)
          </label>
          {{ input value=model.location classNames="form-control" }}
        </div>
        <div class="form-group">
          <label>
            Lat
          </label>
          <br />
          {{model.latitude}}
          <br />
          <label>
            Long
          </label>
          <br />
          {{model.longitude}}
        </div>
        <button {{action 'save' model}} class="btn btn-default">
          Save
        </button>
      </form>
    </div>
  </div>
</div>
